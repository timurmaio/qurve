{
  "name": "qurve",
  "version": "0.1.0",
  "description": "High-performance canvas chart primitives for React",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "react",
    "charts",
    "canvas",
    "visualization",
    "recharts"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timurmaio/qurve.git",
    "directory": "packages/qurve"
  },
  "homepage": "https://github.com/timurmaio/qurve#readme",
  "bugs": {
    "url": "https://github.com/timurmaio/qurve/issues"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "check:release": "pnpm run typecheck && pnpm run build && pnpm pack",
    "prepublishOnly": "pnpm run typecheck && pnpm run build"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
